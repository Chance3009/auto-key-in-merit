[Unit]
Description=Merit Input Automation Service
After=network.target

[Service]
User=chance30903
Group=chance30903
WorkingDirectory=/home/chance30903/auto-key-in-merit
Environment="PATH=/home/chance30903/auto-key-in-merit/venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/home/chance30903/auto-key-in-merit/start.sh
Restart=always
StandardOutput=append:/var/log/merit/app.out.log
StandardError=append:/var/log/merit/app.err.log

[Install]
WantedBy=multi-user.target 